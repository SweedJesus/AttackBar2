  <StatusBar name="AttackBar_PlayerMH" toplevel="true" parent="UIParent" inherits="AttackBarTemplate"/>
  <StatusBar name="AttackBar_PlayerOH" toplevel="true" parent="UIParent" inherits="AttackBarTemplate"/>
