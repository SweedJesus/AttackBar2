          <Anchors>
            <Anchor point="TOP">
              <Offset>
                <AbsDimension x="0" y="5"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
      </Layer>
      <Layer level="OVERLAY">
        <Texture name="$parentSpark" hidden="true" file="Interface\CastingBar\UI-CastingBar-Spark" alphaMode="ADD">
          <Size>
            <AbsDimension x="32" y="32"/>
          </Size>
          <Anchors>
            <Anchor point="CENTER"/>
          </Anchors>
        </Texture>
        <Texture name="$parentFlash" hidden="true" file="Interface\CastingBar\UI-CastingBar-Flash" alphaMode="ADD">
          <Size>
            <AbsDimension x="256" y="64"/>
