<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
  <Script file="Swing.lua"/>
  <!-- Addon core
       -->
  <Frame name="Swing">
    <Scripts>
      <OnLoad>
				Swing_OnLoad()
      </OnLoad>
      <OnEvent>
        Swing_OnEvent()
      </OnEvent>
    </Scripts>
  </Frame>
  <!-- Attack bar template
       -->
  <StatusBar name="SwingBarTemplate" drawLayer="BORDER" movable="true" hidden="true" virtual="true">
    <Scripts>
      <OnMouseDown>
        SwingBar_OnMouseDown()
      </OnMouseDown>
      <OnMouseUp>
        SwingBar_OnMouseUp()
      </OnMouseUp>
    </Scripts>
    <Size>
      <AbsDimension x="195" y="13"/>
    </Size>
		<Anchors>
			<Anchor point="CENTER">
				<Offset>
					<AbsDimension x="0" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture name="$parentBackground" setAllPoints="true">
          <Color r="0.0" g="0.0" b="0.0" a="0.5"/>
        </Texture>
      </Layer>
      <Layer level="ARTWORK">
        <FontString name="$parentLText" inherits="GameFontHighlight" justifyH="LEFT">
          <Size>
            <AbsDimension x="185" y="16"/>
          </Size>
          <Anchors>
            <Anchor point="LEFT">
              <Offset>
                <AbsDimension x="4" y="2"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
        <FontString name="$parentRText" inherits="GameFontHighlight" justifyH="RIGHT">
          <Size>
            <AbsDimension x="185" y="16"/>
          </Size>
          <Anchors>
            <Anchor point="RIGHT">
              <Offset>
                <AbsDimension x="-4" y="2"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
        <Texture name="$parentBorder" file="Interface\CastingBar\UI-CastingBar-Border">
          <Size>
            <AbsDimension x="256" y="64"/>
          </Size>
          <Anchors>
            <Anchor point="TOP">
              <Offset>
                <AbsDimension x="0" y="28"/>
              </Offset>
            </Anchor>
          </Anchors>
        </Texture>
      </Layer>
      <Layer level="OVERLAY">
        <Texture name="$parentSpark" file="Interface\CastingBar\UI-CastingBar-Spark" alphaMode="ADD">
          <Size>
            <AbsDimension x="32" y="32"/>
          </Size>
          <Anchors>
            <Anchor point="CENTER"/>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
    <BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
  </StatusBar>
  <!-- Attack bars
       -->
  <StatusBar name="SwingBar_PlayerMH" toplevel="true" parent="UIParent" inherits="SwingBar_Template">
    <Anchors>
      <Anchor point="CENTER">
        <Offset>
          <AbsDimension x="0" y="-120"/>
        </Offset>
      </Anchor>
    </Anchors>
  </StatusBar>
  <StatusBar name="SwingBar_PlayerOH" toplevel="true" parent="UIParent" inherits="SwingBar_Template">
    <Anchors>
      <Anchor point="CENTER">
        <Offset>
          <AbsDimension x="0" y="-150"/>
        </Offset>
      </Anchor>
    </Anchors>
  </StatusBar>
  <StatusBar name="SwingBar_EnemyMH" toplevel="true" parent="UIParent" inherits="SwingBar_Template">
    <Anchors>
      <Anchor point="CENTER">
        <Offset>
          <AbsDimension x="0" y="-180"/>
        </Offset>
      </Anchor>
    </Anchors>
  </StatusBar>
  <StatusBar name="SwingBar_EnemyOH" toplevel="true" parent="UIParent" inherits="SwingBar_Template">
    <Anchors>
      <Anchor point="CENTER">
        <Offset>
          <AbsDimension x="0" y="-210"/>
        </Offset>
      </Anchor>
    </Anchors>
  </StatusBar>
  <StatusBar name="SwingBar_GaymerPower" toplevel="true" parent="UIParent" inherits="SwingBar_Template">
    <Anchors>
      <Anchor point="CENTER">
        <Offset>
          <AbsDimension x="0" y="-240"/>
        </Offset>
      </Anchor>
    </Anchors>
  </StatusBar>
</Ui>
