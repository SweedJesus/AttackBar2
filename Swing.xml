<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
  <Script file="Swing.lua"/>
  <!-- Addon core
       -->
  <Frame name="Swing">
    <Scripts>
      <OnLoad>
				Swing_OnLoad()
      </OnLoad>
      <OnEvent>
        Swing_OnEvent()
      </OnEvent>
    </Scripts>
  </Frame>
  <!-- Attack bar template -->
  <StatusBar name="SwingTemplate" drawLayer="BORDER" movable="true" hidden="true" virtual="true">
    <Scripts>
      <OnMouseDown>
				if not Swing.locked and arg1 == "LeftButton" then
					this:StartMoving()
				end
      </OnMouseDown>
      <OnMouseUp>
				if arg1 == "LeftButton" then
					this:StopMovingOrSizing()
				end
      </OnMouseUp>
    </Scripts>
    <Size>
      <AbsDimension x="195" y="13"/>
    </Size>
		<Anchors>
			<Anchor point="CENTER">
				<Offset>
					<AbsDimension x="0" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture name="$parentBackground" setAllPoints="true">
          <Color r="0.0" g="0.0" b="0.0" a="0.5"/>
        </Texture>
      </Layer>
      <Layer level="ARTWORK">
        <FontString name="$parentText" inherits="GameFontHighlight">
          <Size>
            <AbsDimension x="185" y="16"/>
          </Size>
          <Anchors>
            <Anchor point="CENTER">
              <Offset>
                <AbsDimension x="0" y="2"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
        <Texture name="$parentBorder" file="Interface\CastingBar\UI-CastingBar-Border">
          <Size>
            <AbsDimension x="256" y="64"/>
          </Size>
          <Anchors>
            <Anchor point="TOP">
              <Offset>
                <AbsDimension x="0" y="28"/>
              </Offset>
            </Anchor>
          </Anchors>
        </Texture>
      </Layer>
      <Layer level="OVERLAY">
        <Texture name="$parentSpark" file="Interface\CastingBar\UI-CastingBar-Spark" alphaMode="ADD">
          <Size>
            <AbsDimension x="32" y="32"/>
          </Size>
          <Anchors>
            <Anchor point="CENTER"/>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
    <BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
  </StatusBar>
  <!-- Bars -->
  <StatusBar name="Swing_Util" toplevel="true" parent="UIParent" inherits="SwingTemplate">
    <Anchors>
      <Anchor point="CENTER" relativeTo="CastingBarFrame">
        <Offset>
          <AbsDimension x="0" y="30"/>
        </Offset>
      </Anchor>
    </Anchors>
  </StatusBar>
  <StatusBar name="Swing_PlayerMH" toplevel="true" parent="UIParent" inherits="SwingTemplate">
    <Anchors>
      <Anchor point="CENTER" relativeTo="Swing_Util">
        <Offset>
          <AbsDimension x="-120" y="60"/>
        </Offset>
      </Anchor>
    </Anchors>
  </StatusBar>
  <StatusBar name="Swing_PlayerOH" toplevel="true" parent="UIParent" inherits="SwingTemplate">
    <Anchors>
      <Anchor point="CENTER" relativeTo="Swing_Util">
        <Offset>
          <AbsDimension x="-120" y="30"/>
        </Offset>
      </Anchor>
    </Anchors>
  </StatusBar>
  <StatusBar name="Swing_TargetMH" toplevel="true" parent="UIParent" inherits="SwingTemplate">
    <Anchors>
      <Anchor point="CENTER" relativeTo="Swing_Util">
        <Offset>
          <AbsDimension x="120" y="60"/>
        </Offset>
      </Anchor>
    </Anchors>
  </StatusBar>
  <StatusBar name="Swing_TargetOH" toplevel="true" parent="UIParent" inherits="SwingTemplate">
    <Anchors>
      <Anchor point="CENTER" relativeTo="Swing_Util">
        <Offset>
          <AbsDimension x="120" y="30"/>
        </Offset>
      </Anchor>
    </Anchors>
  </StatusBar>
</Ui>
